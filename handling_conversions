#include "main.h"

/**
 * p_dec - Used to print an interger
 * @args: a parameter in the variadic functions
 *
 * Return: The number of characters printed
 */

int p_dec(va_list args)
{
	int i = 0;
	int count = 0;
	int val;
	int arr[10];
	char c[1];

	val = va_arg(args, int);

	while (val != 0)
	{
		arr[i] = (val % 10);
		val = val / 10;
		if (val == 0)
			break;
		i++;
	}


	for (i = i; i >= 0; i--)
	{
		c[0] = ('0' + arr[i]);
		count += _putchar(c);
	}

	return (count);
}
/**
 * p_char - prints a character
 * @args: a parameter of the variadic function
 *
 * Return: number of characters printed
 */

int p_char(va_list args)
{
	char b = (char)va_arg(args, int);
	int count = 0;

	if (b)
	{
		count = _putchar (&b);
		return (count);
	}

	return (0);
}
/**
 * p_cent - prints %
 * @args: parameter of the variadic function
 * Return: number of characters printed
 */

int p_cent(va_list args)
{
	(void)args;

	_putchar('%');

	return (1);
}
